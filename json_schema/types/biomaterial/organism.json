{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/types/biomaterial/organism/4.0.0/organism.json",
    "description": "Information about the organism from which a specimen was collected.",
    "additionalProperties" : false,
    "title": "donor",
    "required" : [
        "biomaterial_core",
        "is_living"
    ],
    "definitions" : {
        "human_specific": {
            "description": "Fields that only apply to humans.",
            "properties": {
            }
        },
        "non_human_specific": {
            "description": "Fields that only apply to non-humans.",
            "properties": {
                "strain": {
                    "description": "The name of th mouse inbred strain. e.g. C57BL/6.",
                    "type": "array",
                    "items": {
                        "$ref": "ontology.json"
                    }
                }
            }
        }

    },
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/types/biomaterial/organism/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/organism.json",
            "type": "string"
        },
        "biomaterial_core" : {
	        "description": "Core biomaterial-level information.",
            "$ref": "http://schema.humancellatlas.org/core/biomaterial/4.0.0/biomaterial_core.json"
        },
        "human_specific": {
            "$ref": "#definitions/human_specific"
        },
        "non_human_specific": {
            "$ref": "#definitions/non_human_specific"
        },
        "death": {
	        "description": "Information about conditions of death (or info that donor was living at time of collection).",
            "$ref": "http://schema.humancellatlas.org/common/biomaterial/death/4.0.0/death.json"
        },
        "age": {
            "description": "Age in age_units. Measured since birth.",
            "maximum": 150, 
            "minimum": 0, 
            "type": "number"
        }, 
        "age_unit": {
            "description": "The unit in which age is expressed. Must be one of hour, day, week, month, or year.",
            "enum": [
                "hour", 
                "day", 
                "week",
                "month",
                "year"
            ]
        },
        "body_mass_index": {
            "description": "The body mass index of the donor.",
            "maximum": 100, 
            "minimum": 5, 
            "type": "number"
        },
        "development_stage": {
	        "description": "A classification of the developmental stage of the organism.",
            "$ref": "ontology.json"
        }, 
        "disease": {
            "description": "Short description of disease status of individual.",
	        "type": "array",
	        "items": {
		        "$ref": "ontology_json/disease_ontology.json"
	        }
        },
        "familial_relationship": {
            "description": "Information about other organisms related to this organism.",
            "$ref": "familial_relationship.json"
        },
        "gestational_age": {
            "description": "Gestational age in gestational_age_units. Measured since fertilization.",
            "maximum": 150,
            "minimum": 0,
            "type": "number"
        },
        "gestational_age_unit": {
            "description": "The unit in which gestational age is expressed. Must be one of hour, day, week, month, or year.",
            "enum": [
                "hour",
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "height": {
            "description": "Height of donor in meters.",
            "maximum": 10, 
            "minimum": 0, 
            "type": "number"
        },
        "is_living": {
            "description": "Should be yes if donor is living at time of biomaterial donation. Otherwise, should be no.",
            "type": "boolean"
        }, 
        "sex": {
            "description": "Sex of donor. Should be one of male, female, mixed, or unknown.",
            "enum": [
                "female", 
                "male", 
                "mixed", 
                "unknown"
            ]
        },
        "weight": {
            "description": "Weight of donor in kilograms.",
            "maximum": 1000, 
            "minimum": 0,
            "type": "number"
        }
    },
    "type": "object"
}
