{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/types/biomaterial/cell_suspension/4.0.0/cell_suspension.json",
    "description": "Information about the cell suspension derived from the collected or cultured specimen",
    "additionalProperties" : false,
    "title" : "cell_suspension",
    "required" : [
      "biomaterial_core",
      "enrichment"
    ],
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/types/biomaterial/cell_suspension/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/cell_suspension.json",
            "type": "string"
        },
        "biomaterial_core" : {
	        "description": "Core biomaterial-level information.",
            "$ref": "http://schema.humancellatlas.org/biomaterial/4.0.0/biomaterial_core.json"
        },
        "cell_morphology": {
            "description": "Description of the morphology of the cells in the cell suspension.",
            "type": "string"
        },
        "cell_size": {
            "description": "The size of the cells in the cell suspension.",
            "type": "number"
        },
        "cell_size_unit": {
          "description": "The unit in which the cell size is expressed.",
            "enum": [
                "millimeter",
                "micrometer"
            ]
       },
        "target_cell_type": {
            "description" : "Cell types present in the suspension.",
            "type": "array",
            "items": {"$ref": "ontology_json/cell_type_ontology.json"}
       },
        "total_estimated_cells": {
            "description": "Total estimated number of cells in biomaterial. May be 1 for well-based assays.",
            "maximum": 1000000000.0,
            "minimum": 0.1,
            "type": "number"
        }
     },
    "type": "object"
}