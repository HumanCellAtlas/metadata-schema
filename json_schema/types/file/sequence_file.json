{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/types/file/4.0.0/sequence_file.json",
    "description": "A file of read sequences generated by a sequencing experiment.",
    "title": "sequence_file",
    "required": [
        "read_index"
    ],
    "properties": {
        "$schema": {
            "pattern": "http://schema.humancellatlas.org/common/process/sequencing/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/sequence_file.json",
            "type": "string"
        },
        "read_index": {
            "description": "Whether the read represents the R1, R2, I1, or I2 part of the sequencing read.",
            "type": "string",
            "enum": [
                "r1",
                "r2",
                "i1",
                "i2"
            ]
        },
        "lane_index": {
            "description": "The index of the lane that this file was produced from.",
            "type": "integer"
        }
    }
}
