{
    "$schema": "http://json-schema.org/draft-04/schema#",
     "id": "http://schema.humancellatlas.org/types/process/sample/4.0.0/single_cell.json",
    "additionalProperties": false,
    "description": "Contains information on single cell aspects of an assay.", 
    "required": [
       "cell_handling"
    ],
    "title": "single_cell",
    "properties": {
       "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/types/process/sample/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/single_cell.json",
            "type": "string"
        },
        "barcode": {
            "description": "Information about cell identifier barcode.",
            "$ref": "barcode.json"
        },
        "cell_handling": {
            "description": "How cells are separated. e.g. FACS, drop-seq, 10X_v2, Fluidigm C1.",
            "enum": [
                "10x_v2", 
                "FACS", 
                "Fluidigm C1", 
                "drop-seq", 
                "inDrop", 
                "mouth pipette", 
                "bulk"
            ]
        }
    },
    "type": "object"
}
