{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/types/process/sequencing/4.0.0/rna_process.json",
    "additionalProperties": false,
     "required": [
        "end_bias", "library_construction", "strand"
    ],
    "title": "rna",
    "description": "Information about how RNA was converted to cDNA for sequencing.",
    "properties": {
         "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/types/process/sequencing/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/rna_process.json",
            "type": "string"
        },
         "process_core" : {
	        "description": "Core process-level information.",
            "$ref": "http://schema.humancellatlas.org/core/process/4.0.0/process_core.json"
        },
        "end_bias": {
            "description": "The type of end bias the library has. Must be one of 3' bias, 5' bias, 3' end, 5' end, or none.",
            "enum": [
                "three_prime_end", 
                "three_prime_bias", 
                "five_prime_end", 
                "five_prime_bias", 
                "none"
            ]
        }, 
        "library_construction": {
            "description": "The general approach for sequencing library construction. e.g. Smart-seq, Drop-seq, 10x.",
            "enum": [
                "unknown",
                "CEL-seq",
                "SMARTer Ultra Low RNA Kit",
                "modified smart-seq2",
                "smart-seq2",
		        "QUARTZ-Seq",
                "10x_v2", 
		        "drop-seq",
		        "inDrop"
            ]
        }, 
        "library_protocol": {
            "description": "RNA preparation protocol", 
            "pattern": "^P-....-.*$", 
            "type": "string"
        }, 
        "primer": {
            "description": "Primer used for cDNA synthesis from RNA. Must be either poly-dT or random.",
            "enum": [
                "poly-dT",
                "random"
            ]
        }, 
        "spike_in": {
            "description": "Name of RNA spike-in kit. e.g. ERCC.",
            "enum": [
                "ERCC"
            ]
        }, 
        "spike_in_dilution": {
            "description": "Dilution of RNA spike-in.",
            "maximum": 1000000, 
            "minimum": 1, 
            "type": "integer"
        }, 
        "strand": {
            "description": "Single stranded?", 
            "enum": [
                "both", 
                "first"
            ]
        }
    },
    "type": "object"
}
