{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/types/sample/cell_suspension/4.0.0/cell_suspension.json",
    "description": "Information about the cell suspension derived from the collected or cultured specimen",
    "additionalProperties" : false,
    "title" : "cell_suspension",
    "required" : [
      "sample_core",
      "enrichment"
    ],
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/types/sample/cell_suspension/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/cell_suspension.json",
            "type": "string"
        },
        "sample_core" : {
	        "description": "Core sample-level information.",
            "$ref": "http://schema.humancellatlas.org/sample/4.0.0/sample_core.json"
        },
        "target_cell_type": {
            "description" : "Cell types present in the suspension.",
            "type": "array",
            "items": {"$ref": "ontology_json/cell_type_ontology.json"}
       },
        "enrichment": {
            "description": "How sample was enriched for specific cell type(s).",
            "type": "array",            
            "items": { "$ref": "enrichment.json" }
        },
        "total_estimated_cells": {
            "description": "Total estimated number of cells in sample. May be 1 for well-based assays.",
            "maximum": 1000000000.0,
            "minimum": 0.1,
            "type": "number"
        },
        "well": {
            "$ref": "well.json",
            "description": "Information about wells in a plate or chip used for single-cell isolation."
        }
     },
    "type": "object"
}