{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/module/biomaterial/4.0.0/homo_sapiens_specific.json",
    "description": "Information specific to an organism that is a homo sapiens.",
    "additionalProperties": false,
    "required": [
        "$schema"
    ],
    "title": "homo_sapiens_specific",
    "type": "object",
    "properties": {
        "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/module/biomaterial/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/homo_sapiens_specific.json"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "biomaterial",
                "file",
                "process",
                "project",
                "protocol",
                "analysis_bundle",
                "biomaterial_bundle",
                "process_bundle",
                "project_bundle"
            ]
        },
         "body_mass_index": {
            "description": "The body mass index of the organism.",
            "type": "number",
            "maximum": 100,
            "minimum": 5,
            "user_friendly": "Body mass index"
        },
        "ethnicity": {
            "description": "An array of ontology terms from EMBL-EBI's Ancestry Ontology describing ancestral groups, uncategorised ancestral groups, and population isolates.",
            "type": "array",
            "items": {
                "$ref": "module/ontology/ethnicity_ontology.json"
            },
            "user_friendly": "Ethnicity"
        }
    }
}
