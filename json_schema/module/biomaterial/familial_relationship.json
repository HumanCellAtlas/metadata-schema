{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/module/biomaterial/4.0.0/familial_relationship.json",
    "description": "Information about other organisms that this organism is related to.",
    "additionalProperties": false,
    "required": [
        "$schema"
    ],
    "title": "familial_relationship",
    "type": "object",
    "properties": {
        "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/module/biomaterial/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/familial_relationship.json"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "biomaterial",
                "file",
                "process",
                "project",
                "protocol",
                "analysis_bundle",
                "biomaterial_bundle",
                "process_bundle",
                "project_bundle"
            ]
        },
        "is_child_of": {
            "description": "This organism is a child of the indicated organism.",
            "type": "string",
            "user_friendly": "Child of"
        },
         "is_parent_of": {
            "description": "This organism is a parent of the indicated organism.",
            "type": "string",
            "user_friendly": "Parent of"
        },
         "is_sibling_of": {
            "description": "This organism is a sibling of the indicated organism.",
            "type": "string",
            "user_friendly": "Sibling of"
        }
    }
}
