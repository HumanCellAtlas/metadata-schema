{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A term that may be associated with a cell type-related ontology term",
    "additionalProperties": false,
    "required": [
        "text"
    ],
    "title": "cell_type_ontology",
    "properties": {
        "describedBy":  {
            "pattern" : "^(http|https)://schema.(dev.data.|)humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/cell_type_ontology",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "text": {
            "description": "The name of a cell type supplied by a user.",
            "type": "string"
        },
        "ontology": {
            "description": "An ontology term identifier in the form prefix:accession",
            "type": "string",
            "graph_restriction":  {
                "ontologies" : ["obo:hcao", "obo:cl"],
                "classes": ["CL:0000003"],
                "relations": ["rdfs:subClassOf"],
                "direct": false,
                "include_self": false
            }
        }
    },
    "type": "object"
}