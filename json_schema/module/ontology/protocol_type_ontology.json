{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/module/ontology/4.0.0/protocol_type_ontology.json",
    "description": "A term that may be associated with a protocol-related ontology term",
    "additionalProperties": false,
    "required": [
        "text"
    ],
    "title": "protocol_type_ontology",
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/protocol_type_ontology.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "text": {
            "description": "The name of a protocol type used.",
            "type": "string"
        },
        "ontology": {
            "description": "An ontology term identifier in the form prefix:accession",
            "type": "string",
            "graph_restriction":  {
                "ontologies" : ["obo:obi", "obo:efo"],
                "classes": ["OBI:0000272"],
                "relations": ["rdfs:subClassOf"],
                "direct": false,
                "include_self": false
            }
        }
    },
    "type": "object"
}