{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "id": "http://schema.humancellatlas.org/module/ontology/4.0.0/ontology.json",
    "description": "A term that may be associated with an ontology term",
    "required": [
        "text"
    ],
    "title": "ontology",
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/ontology.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "text": {
            "description": "The text for the term as the user provides it.", 
            "type": "string"
        }, 
        "ontology": {
            "description": "An identifier for an ontology term taking the form prefix:accession e.g. UBERON:0000062.", 
            "type": "string"
        }
    },
    "type": "object"
}
