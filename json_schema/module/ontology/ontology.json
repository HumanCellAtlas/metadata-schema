{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "id": "http://schema.humancellatlas.org/module/ontology/4.0.0/ontology.json",
    "description": "A term that may be associated with an ontology term",
    "additionalProperties": false,
    "required": [
        "$schema",
        "text"
    ],
    "title": "ontology",
    "type": "object",
    "properties": {
        "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/ontology.json"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "biomaterial",
                "file",
                "process",
                "project",
                "protocol",
                "analysis_bundle",
                "biomaterial_bundle",
                "process_bundle",
                "project_bundle"
            ]
        },
        "text": {
            "description": "The text for the term as the user provides it.", 
            "type": "string"
        }, 
        "ontology": {
            "description": "An identifier for an ontology term taking the form prefix:accession e.g. UBERON:0000062.", 
            "type": "string"
        }
    }
}
