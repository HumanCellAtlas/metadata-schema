{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A term that may be associated with a process-related ontology term",
    "additionalProperties": false,
    "required": [
        "text"
    ],
    "title": "library_construction_ontology",
    "properties": {
        "describedBy":  {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "^(http|https)://schema.(dev.|)data.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/library_construction_ontology"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "text": {
            "description": "The name of a library construction approach being used.",
            "type": "string"
        },
        "ontology": {
            "description": "An ontology term identifier in the form prefix:accession",
            "type": "string",
            "graph_restriction":  {
                "ontologies" : ["obo:efo"],
                "classes": ["OBI:0000711"],
                "relations": ["rdfs:subClassOf"],
                "direct": false,
                "include_self": false
            }
        }
    },
    "type": "object"
}