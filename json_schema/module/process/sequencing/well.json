{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/module/process/sequencing/4.0.0/well.json",
    "description": "This module describes the well inside the plate or fluidics chip where biomaterial came from.",
    "additionalProperties": false,
    "required": [
        "$schema"
    ],
    "title": "well",
    "type": "object",
    "properties": {
        "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/module/process/sequencing/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/well.json"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "biomaterial",
                "file",
                "process",
                "project",
                "protocol",
                "analysis_bundle",
                "biomaterial_bundle",
                "process_bundle",
                "project_bundle"
            ]
        },
        "plate": {
            "description": "An ID for the plate that the well is located on.",
            "type": "string",
            "user_friendly": "Plate ID"
        },
        "well_name": {
            "description": "A name for the well. Should be unique for the plate",
            "type": "string",
            "user_friendly": "Well name"
        }, 
        "row": {
            "description": "Well row in plate.",
            "type": "string",
            "user_friendly": "Well row"
        },
         "col": {
            "description": "Well column in plate.",
            "type": "string",
            "user_friendly": "Well column"
        },
        "quality": {
            "description": "Note on how good cell looks if imaged in well before sequencing.",
            "type": "string",
            "enum": [
                "OK",
                "control, 2-cell well",
                "control, empty well",
                "low quality cell"
            ],
            "user_friendly": "Cell quality"
        }
    }
}
