{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/module/process/sequencing/4.0.0/well.json",
    "description": "This module describes the well inside the plate or fluidics chip where biomaterial came from.",
    "additionalProperties": false,
    "title": "well",
    "type": "object",
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/module/process/sequencing/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/well.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "col": {
            "description": "Well column in plate.",
            "type": "string"
        }, 
        "name": {
            "description": "A name for the well. Should be unique for the plate",
            "type": "string"
        }, 
        "plate": {
            "description": "An ID for the plate that the well is located on.",
            "type": "string"
        },
        "quality": {
            "description": "Note on how good cell looks if imaged in well before sequencing.",
            "enum": [
                "OK", 
                "control, 2-cell well", 
                "control, empty well", 
                "low quality cell"
            ]
        }, 
        "row": {
            "description": "Well row in plate.",
            "type": "string"
        }
    }
}
