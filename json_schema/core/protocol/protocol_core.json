{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/core/protocol/4.0.0/protocol_core.json",
    "description": "A protocol entity contains information about an intended protocol that was followed in the project.",
    "additionalProperties": false,
    "required": [
        "protocol_id"
    ],
    "title": "protocol_core",
    "type": "object",
    "properties": {
        "$schema" : {
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/core/protocol/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/protocol_core.json"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "protocol_id":{
            "description": "A unique ID for this protocol.",
            "type": "string"
        },
        "protocol_name": {
            "description": "A short, descriptive name for the protocol that need not be unique.",
            "type": "string"
        },
        "protocol_description": {
            "description": "A general description of the protocol.",
            "type": "string"
        },
        "batch_number": {
            "description": "The batch of kit used.",
            "type": "string"
        },
        "doi": {
            "description": "The publication digital object identifier (doi) associated with the protocol.",
            "type": "string",
            "example": "10.1016/j.cell.2016.07.054"
        },
        "pdf": {
            "description": "A filename of a PDF containing the details of the protocol.",
            "type": "string",
            "pattern": "^.*.pdf$"
        },
        "retail_name": {
            "description": "The retail name of the kit used.",
            "type": "string",
            "example": "SureCell WTA 3' Library Prep Kit"
        }
    }
}
