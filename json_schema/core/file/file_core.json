{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/core/file/4.0.0/file_core.json",
    "description": "A file entity contains information about a data file produced from any process.",
    "additionalProperties": false,
    "required": [
	    "file_name",
	    "file_format"
    ],
    "title": "file_core",
    "type": "object",
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/core/file/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/file_core.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "file_format": {
            "description": "The format of the data file.",
            "type": "string",
            "user_friendly": "File format"
        }, 
        "file_name": {
            "description": "The filename of the data file.",
            "type": "string",
            "user_friendly": "File name"
        },
        "checksum": {
            "description": "MD5 checksum of the data file.",
            "type": "string",
            "user_friendly": "Checksum"
	    }
    }
}
