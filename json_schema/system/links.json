{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema for describing the links between entities in an experiment graph.",
  "additionalProperties": false,
  "required": [
    "describedBy",
    "schema_type",
    "links"
  ],
  "title": "Links",
  "name": "links",
  "type": "object",
  "definitions": {
    "input": {
      "type": "object",
      "description": "An input to a process",
      "required": [
        "input_type",
        "input_id"
      ],
      "properties": {
        "input_type": {
          "description": "The type of the input entity, e.g 'cell_suspension'",
          "type": "string"
        },
        "input_id": {
          "description": "UUID of the input entity",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
      }
    },
    "output": {
      "type": "object",
      "description": "An output from a process",
      "required": [
        "output_type",
        "output_id"
      ],
      "properties": {
        "output_type": {
          "description": "The type of the output entity, e.g 'sequence_file'",
          "type": "string"
        },
        "output_id": {
          "description": "UUID of the output entity",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
      }
    },
    "protocol": {
      "type": "object",
      "description": "A protocol used in a process",
      "required": [
        "protocol_type",
        "protocol_id"
      ],
      "properties": {
        "protocol_type": {
          "description": "The type of this protocol entity, e.g 'enrichment_protocol'",
          "type": "string"
        },
        "protocol_id": {
          "description": "UUID of this protocol entity",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
      }
    },
    "link": {
      "type": "object",
      "required": [
        "process_type",
        "process_id",
        "inputs",
        "outputs",
        "protocols"
      ],
      "properties": {
        "process_type": {
          "description": "The type of the process described by this link",
          "type": "string"
        },
        "process_id": {
          "description": "UUID of the process described by this link",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "inputs": {
          "description": "An array of inputs for this link",
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/input"
          }
        },
        "outputs": {
          "description": "An array of outputs for this link",
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/output"
          }
        },
        "protocols": {
          "description": "An array of protocols for this link",
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protocol"
          }
        }
      }
    }
  },
  "properties": {
    "describedBy": {
      "description": "The URL reference to the schema.",
      "type": "string",
      "pattern": "^(http|https)://schema.(.*?)humancellatlas.org/system/(([0-9]{1,}.[0-9]{1,}.[0-9]{1,})|([a-zA-Z]*?))/links"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$"
    },
    "schema_type": {
      "description": "The type of the metadata schema entity.",
      "type": "string",
      "enum": [
        "link_bundle"
      ]
    },
    "links": {
      "description": "An array of linking objects.",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "#/definitions/link"
      }
    }
  }
}