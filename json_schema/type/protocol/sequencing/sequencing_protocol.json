{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/protocol/sequencing/4.0.0/sequencing_protocol.json",
    "description": "Information about the sequencing protocol",
    "additionalProperties": false,
    "title": "sequencing_protocol",
    "type": "object",
    "properties": {
         "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/type/protocol/sequencing/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/sequencing_protocol.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
       "protocol_core" : {
	        "description": "Core protocol-level information.",
            "$ref": "http://schema.humancellatlas.org/core/protocol/4.0.0/protocol_core.json"
        },
        "protocol_type": {
            "description": "The type of protocol. Must be a term from the Experimental Factor Ontology.",
            "$ref": "ontology_json/protocol_type_ontology.json"
        }
    }
}
