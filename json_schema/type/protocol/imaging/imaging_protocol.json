{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/protocol/imaging/4.0.0/imaging_protocol.json",
    "description": "Information about the imaging protocol",
    "additionalProperties": false,
    "required": [
        "$schema",
        "protocol_core"
    ],
    "title": "imaging_protocol",
    "type": "object",
    "properties": {
         "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/type/protocol/imaging/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/imaging_protocol.json"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "biomaterial",
                "file",
                "process",
                "project",
                "protocol",
                "analysis_bundle",
                "biomaterial_bundle",
                "process_bundle",
                "project_bundle"
            ]
        },
        "protocol_core" : {
	        "description": "Core protocol-level information.",
            "$ref": "http://schema.humancellatlas.org/core/protocol/4.0.0/protocol_core.json"
        },
        "protocol_type": {
            "description": "The type of protocol. Must be a term from the Experimental Factor Ontology.",
            "$ref": "module/ontology/protocol_type_ontology.json",
            "user_friendly": "Protocol type"
        }
    }
}
