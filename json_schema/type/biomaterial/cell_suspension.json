{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/biomaterial/cell_suspension/4.0.0/cell_suspension.json",
    "description": "Information about the cell suspension derived from the collected or cultured specimen",
    "additionalProperties": false,
    "required": [
      "biomaterial_core"
    ],
    "title": "cell_suspension",
    "type": "object",
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/type/biomaterial/cell_suspension/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/cell_suspension.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "biomaterial_core" : {
	        "description": "Core biomaterial-level information.",
            "$ref": "http://schema.humancellatlas.org/biomaterial/4.0.0/biomaterial_core.json"
        },
        "cell_morphology": {
            "description": "Features relating to the morphology of cells in a biomaterial.",
            "$ref": "cell_morphology.json",
            "user_friendly": "Cell morphology"
        },
        "genus_species": {
            "description": "The scientific binomial name for the species of the biomaterial. e.g. Homo sapiens.",
            "type" : "array",
            "items":{
                "$ref": "ontology_json/species_ontology.json"
            },
            "user_friendly": "Genus species"
        },
        "target_cell_type": {
            "description" : "Cell types expected to be present in the suspension.",
            "type": "array",
            "items": {
		        "$ref": "ontology_json/cell_type_ontology.json"
	        },
            "user_friendly": "Target cell type"
       },
        "total_estimated_cells": {
            "description": "Total estimated number of cells in biomaterial. May be 1 for well-based assays.",
            "type": "number",
            "maximum": 1000000000.0,
            "minimum": 0.1
        },
            "user_friendly": "Total estimated cell count"
     }
}
