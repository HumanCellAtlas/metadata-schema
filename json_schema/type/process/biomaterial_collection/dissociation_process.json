{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/process/biomaterial_collection/4.0.0/dissociation_process.json",
    "description": "Contains information on the dissociation process used to separate the cells in a specimen.",
    "additionalProperties": false,
    "required": [
        "$schema"
    ],
    "title": "dissociation_process",
    "type": "object",
    "properties": {
        "$schema" : {
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/type/process/biomaterial_collection/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/dissociation_process.json"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "process_core" : {
	        "description": "Core process-level information.",
            "$ref": "http://schema.humancellatlas.org/core/process/4.0.0/process_core.json"
        },
        "dissociation_method": {
            "description": "How cells or organelles were dissociated.",
            "type": "string",
            "enum": [
                "10x_v2", 
                "FACS", 
                "Fluidigm C1", 
                "drop-seq", 
                "inDrop", 
                "mouth pipette", 
                "bulk",
                "enzymatic",
                "mechanical",
                "none"
            ]
        },
        "nucleic_acid_source": {
            "description": "Source cells or organelles from which nucleic acid molecules were selected for sequencing.",
            "type": "string",
            "enum": [
                "bulk cell",
                "single cell",
                "single nucleus",
                "bulk nuclei",
                "mitochondria"
            ]
        },
        "process_type": {
            "description": "The type of process. Ideally an EFO term.",
            "$ref": "ontology_json/process_type_ontology.json"
        }
    }
}
