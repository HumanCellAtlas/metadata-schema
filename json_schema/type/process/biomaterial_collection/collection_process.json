{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/process/biomaterial/4.0.0/collection_process.json",
    "additionalProperties": false,
    "description": "Process by which a biomaterial was collected or transformed from another biomaterial or from a population.",
    "required": [
    ],
    "title": "collection_process",
    "type": "object",
    "properties": {
        "$schema" : {
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/type/process/biomaterial/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/collection_process.json"
        },
        "process_core" : {
	    "description": "Core process-level information.",
            "$ref": "http://schema.humancellatlas.org/core/process/4.0.0/process_core.json"
        },
        "collection_method": {
            "description": "How the biomaterial was collected.",
            "type": "string",
            "enum": [
                "biopsy",
                "blood draw",
                "scraping",
                "urine collection",
                "organ extraction"
            ]
        },
        "process_type": {
            "description": "The type of process. Ideally an EFO term.",
            "$ref": "ontology_json/process_type_ontology.json"
        }
    }
}
