{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/process/biomaterial/4.0.0/enrichment.json",
    "description": "Process by which one biomaterial was produced from another biomaterial to favor a feature or characteristic of interest.",
    "additionalProperties": false,
    "required": [
        "enrichment_type"
    ],
    "title": "enrichment",
    "type": "object",
    "properties": {
        "$schema" : {
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/type/process/biomaterial/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/enrichment.json"
        },
        "enrichment_type": {
            "description": "How enrichment was achieved.",
            "type": "string",
            "example": "FACS",
            "enum": [
                "FACS",
                "MACS",
                "Ficoll gradient",
                "laser capture microdissection",
                "density gradient"
            ]
        },
        "markers": {
            "description": "A space-delimited list of markers with +/-.",
            "type": "string",
            "example": "CD4+ CD8-"
        },
        "size_max": {
            "description": "Maximum size passing selection in microns.",
            "type": "number",
            "maximum": 10000,
            "minimum": 0.01
        },
        "size_min": {
            "description": "Minimum size passing selection in microns.",
            "type": "number",
            "maximum": 10000,
            "minimum": 0.01
        },
    }
}
