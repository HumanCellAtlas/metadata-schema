{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/type/process/biomaterial_collection/4.0.0/enrichment_process.json",
    "description": "Process by which one biomaterial was produced from another biomaterial to favor a feature or characteristic of interest.",
    "additionalProperties": false,
    "required": [
        "enrichment_type"
    ],
    "title": "enrichment_process",
    "type": "object",
    "properties": {
        "$schema" : {
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/type/process/biomaterial_collection/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/enrichment_process.json"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "enrichment_type": {
            "description": "How enrichment was achieved.",
            "type": "string",
            "example": "FACS",
            "enum": [
                "FACS",
                "MACS",
                "Ficoll gradient",
                "laser capture microdissection",
                "density gradient"
            ],
            "user_friendly": "Enrichment type"
        },
        "markers": {
            "description": "A space-delimited list of markers with +/-.",
            "type": "string",
            "example": "CD4+ CD8-",
            "user_friendly": "Markers"
        },
        "size_min": {
            "description": "Minimum size passing selection in microns.",
            "type": "number",
            "maximum": 10000,
            "minimum": 0.01,
            "user_friendly": "Minimum size"
        },
        "size_max": {
            "description": "Maximum size passing selection in microns.",
            "type": "number",
            "maximum": 10000,
            "minimum": 0.01,
            "user_friendly": "Maximum size"
        },
         "process_type": {
            "description": "The type of process. Ideally an EFO term.",
            "$ref": "ontology_json/process_type_ontology.json"
        }
    }
}
