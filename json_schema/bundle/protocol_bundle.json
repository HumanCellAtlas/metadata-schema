{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/bundle/5.0.0/protocol_bundle",
    "description": "A schema for a protocol bundle.",
    "additionalProperties": false,
    "required": [
        "$schema",
        "schema_type"
    ],
    "title": "protocol_bundle",
    "type": "object",
    "definitions": {
        "protocol_ingest": {
            "required": [
                "hca_ingest",
                "content"
            ],
            "type": "object",
            "properties": {
                "hca_ingest": {
                    "description": "Core fields added by HCA ingest service",
                    "type": "object",
                    "$ref": "http://schema.humancellatlas.org/bundle/5.0.0/ingest_audit"
                },
                "content": {
                    "description": "Content for any process type entity.",
                    "type": "object",
                    "oneOf": [
                        { "$ref": "http://schema.humancellatlas.org/type/protocol/analysis/5.0.0/analysis_protocol" },
                        { "$ref": "http://schema.humancellatlas.org/type/protocol/biomaterial/5.0.0/biomaterial_collection_protocol" },
                        { "$ref": "http://schema.humancellatlas.org/type/protocol/imaging/5.0.0/imaging_protocol" },
                        { "$ref": "http://schema.humancellatlas.org/type/protocol/sequencing/5.0.0/sequencing_protocol" }
                    ]
                },
                "has_process": {
                    "description": "An array of processes that instantiated this protocol.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "properties": {
        "$schema" : {
            "description": "The URL reference to the schema.",
            "type": "string",
            "pattern" : "http://schema.humancellatlas.org/bundle/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/protocol_bundle"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "type": "string",
            "enum": [
                "project_bundle"
            ]
        },
        "protocols": {
            "items": {
                "$ref": "http://schema.humancellatlas.org/bundle/5.0.0/protocol_bundle#/definitions/protocol_ingest"
            },
            "type": "array"
        }
    }
}