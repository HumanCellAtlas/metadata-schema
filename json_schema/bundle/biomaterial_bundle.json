{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.humancellatlas.org/bundle/4.0.0/biomaterial_bundle.json",
    "description": "A schema for a biomaterial bundle",
    "additionalProperties": false,
    "title": "biomaterial_bundle",
    "type": "object",
    "definitions": {
        "biomaterial_ingest": {
            "required": [
                "hca_ingest",
                "content"
            ],
            "type": "object",
            "properties": {
                "content": {
                    "type": "object",
                    "description": "Biomaterial content",
                    "$ref": "https://raw.githubusercontent.com/HumanCellAtlas/metadata-schema/4.6.1/json_schema/biomaterial.json"
                },
                "derivation_protocols": {
                    "items": {
                        "description": "An array of protocols used in derivation of this biomaterial.",
                        "$ref": "https://raw.githubusercontent.com/HumanCellAtlas/metadata-schema/4.6.1/json_schema/protocol.json"
                    },
                    "type": "array"
                },
                "hca_ingest": {
                    "type": "object",
                    "description": "Core fields added by HCA ingest service",
                    "$ref": "https://raw.githubusercontent.com/HumanCellAtlas/metadata-schema/4.6.1/json_schema/ingest.json"
                },
                "derived_from": {
                    "type": "string",
                    "description": "The biomaterial that this biomaterial was derived from."
                }
            }
        }
    },
    "properties": {
        "$schema" : {
            "pattern" : "http://schema.humancellatlas.org/core/biomaterial/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/biomaterial_core.json",
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "type": "string",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "example": "4.6.1"
        },
        "biomaterials": {
            "items": {
                "$ref": "https://raw.githubusercontent.com/HumanCellAtlas/metadata-schema/4.6.1/json_schema/biomaterial_bundle.json#/definitions/biomaterial_ingest"
            },
            "type": "array"
        }
    }
}