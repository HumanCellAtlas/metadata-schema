{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id" : "http://schema.humancellatlas.org/bundle/4.0.0/biomaterial_bundle.json",
  "description": "A schema for a biomaterial bundle" ,
  "properties": {
    "$schema" : {
        "pattern" : "http://schema.humancellatlas.org/bundle/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/biomaterial_bundle.json",
        "type": "string"
    }
  },
  "definitions" : {
    "biomaterial_ingest" : {
      "type": "object",
      "required": ["hca_ingest", "content"],
      "properties": {
        "hca_ingest": {
          "$ref": "ingest.json",
          "description": "core fields added by HCA ingest service",
          "type": "object"
        },
        "content": {
          "$ref": "biomaterial.json",
          "description": "biomaterial content",
          "type": "object"
        },
        "derived_from": {
          "type": "string"
        },
        "derivation_protocols": {
          "items": {
            "$ref": "protocol.json",
            "description": "An array of protocols used in derivation of this biomaterial."
          },
          "type": "array"
        }
      }
    }
  },
  "items": {
    "$ref": "biomaterial_bundle.json#/definitions/biomaterial_ingest"
  },
  "type": "array"
}